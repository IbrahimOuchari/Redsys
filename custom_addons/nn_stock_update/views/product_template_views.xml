<odoo>
    <record id="view_product_template_form_stock_adv" model="ir.ui.view">
        <field name="name">product.template.form.stock.adv</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[@name='options']" position="after">
                <div style="margin-top:20px;">
                    <group>
                                          <group>
                        <field name="creation_date"/>
                        <field name="last_movement_date"/>
                        <field name="main_supplier_id"/>
                        <field name="arrival_date"/>
                    </group>
                    <group>
                        <field name="departure_date"/>
                        <field name="supplier_name"/>
                        <field name="invoice_reference"/>
                        <field name="purchase_rfq_id"/>
                    </group>
                    </group>

                </div>
            </xpath>
        </field>
    </record>
</odoo>