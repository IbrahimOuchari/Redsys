<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="company_signature_rh" model="ir.ui.view">
        <field name="name">Comapny Signature RH</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='color']" position="after">
                <field name="signature_responsable_paie" widget="image" class="oe_avatar"/>
                <field name="mat_cnss"/>
                <field name="compte_bancaire"/>
                <field name="banque"/>
                <field name="agence"/>
                <field name="code_exploitation_cnss"/>
                <field name="bureau"/>

            </xpath>
        </field>
    </record>


</odoo>