<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Remplace complÃ¨tement le template original -->
    <template id="account.tax_groups_totals">
        <!--
            Generic template to display a list of tax groups with the related amounts.
            ARGUMENTS:
            - tax_totals: dict in the form generated by account.move's *get*tax_totals.
            - subtotal_to_show: The subtotal we need to render the groups from
        -->
        <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]" t-as="amount_by_group">
            <!-- Skip taxes that have a name containing "Timbre" -->
            <t t-if="'Timbre' not in amount_by_group['tax_group_name']">
                <t t-set="display_tax_base" t-value="tax_totals['display_tax_base']" />
                <tr>
                    <t t-if="tax_totals['display_tax_base']">
                        <td>
                            <!-- Remove "on amount" text from tax name -->
                            <span t-esc="amount_by_group['tax_group_name'].split(' on ')[0]" />
                        </td>
                        <td class="text-end o_price_total">
                            <span class="text-nowrap"
                                t-out="amount_by_group['formatted_tax_group_amount']">1.05</span>
                        </td>
                    </t>
                    <t t-else="">
                        <td>
                            <!-- Remove "on amount" text from tax name -->
                            <span t-out="amount_by_group['tax_group_name'].split(' on ')[0]">Tax 15%</span>
                        </td>
                        <td class="text-end o_price_total">
                            <span class="text-nowrap"
                                t-out="amount_by_group['formatted_tax_group_amount']">4.05</span>
                        </td>
                    </t>
                </tr>
            </t>
        </t>
    </template>
</odoo>